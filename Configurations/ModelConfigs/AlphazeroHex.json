{
  "name": "boardgames",
  "algorithm": "ALPHAZERO",
  "architecture": "Hex",
  
  "args": {
    "numIters": 100,
    "numEps": 100,
    "numTrainingSteps": 50,
    "pitting": true,
    "pitting_trials": 20,
    "pit_acceptance_ratio": 0.6,
    "dirichlet_alpha": 0.3,
    "exploration_fraction": 0.1,
    "maxlenOfQueue": 200000,
    "numMCTSSims": 50,
    "prioritize": false,
    "prioritize_alpha": 1,
    "prioritize_beta": 1,
    "n_steps": 10,
    "c1": 1.25,
    "c2": 19652,
    "gamma": 1,

    "minimum_reward": -1,
    "maximum_reward": 1,

    "checkpoint": "./AlphaZeroOut/",
    "load_model": false,
    "load_folder_file": ["./AlphaZeroOut/", "latest.pth.tar"],
    "numItersForTrainExamplesHistory": 20,

    "temperature_schedule": {
      "method": "stepwise",
      "by_weight_update": false,
      "schedule_points": [[20, 1], [20, 0]]
    }
  },
  
  "net_args": {
    "lr": 0.001,
    "l2": 1e-4,
    "dropout": 0.0,
    "batch_size": 128,
    "cuda": false,
    "num_channels": 256,
    "num_towers": 3,
    "num_dense": 2,
    "size_dense": 64,
    "dense_activation": "tanh",
    "support_size": 20,
    "observation_length": 1
  }
}
