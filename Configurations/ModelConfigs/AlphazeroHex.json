{
  "name": "boardgames",
  "algorithm": "ALPHAZERO",
  "architecture": "Hex",
  
  "args": {
    "num_selfplay_iterations": 100,
    "num_episodes": 100,
    "num_gradient_steps": 300,
    "pitting": true,
    "pitting_trials": 30,
    "pit_acceptance_ratio": 0.55,
    "dirichlet_alpha": 0.3,
    "exploration_fraction": 0.1,
    "max_buffer_size": 200000,
    "num_MCTS_sims": 50,
    "prioritize": false,
    "prioritize_alpha": 1,
    "prioritize_beta": 1,
    "n_steps": 10,
    "c1": 1.25,
    "c2": 19652,
    "gamma": 1,

    "minimum_reward": -1,
    "maximum_reward": 1,

    "checkpoint": "./out/AlphaZeroOut/",
    "load_model": false,
    "load_folder_file": ["./out/AlphaZeroOut/", "latest.pth.tar"],
    "selfplay_buffer_window": 20,

    "temperature_schedule": {
      "method": "linear",
      "by_weight_update": true,
      "schedule_points": [[5000, 1], [7500, 0.5], [10000, 0.25]]
    }
  },
  
  "net_args": {
    "lr": 0.001,
    "l2": 1e-4,
    "dropout": 0.0,
    "batch_size": 64,
    "cuda": false,
    "num_channels": 128,
    "num_convs": 1,
    "num_towers": 2,
    "residual_left": 2,
    "residual_right": 0,
    "num_dense": 2,
    "size_dense": 256,
    "activation": "leakyrelu",
    "support_size": 0,
    "observation_length": 5
  }
}
