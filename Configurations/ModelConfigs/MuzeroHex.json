{
  "name": "boardgames",
  "algorithm": "MUZERO",
  "architecture": "Hex",

  "args": {
    "numIters": 100,
    "numEps": 50,
    "numTrainingSteps": 100,
    "pitting": false,
    "pitting_trials": 20,
    "pit_acceptance_ratio": 0.2,
    "dirichlet_alpha": 0.3,
    "exploration_fraction": 0.1,
    "maxlenOfQueue": 200000,
    "numMCTSSims": 25,
    "prioritize": false,
    "prioritize_alpha": 1,
    "prioritize_beta": 1,
    "K": 5,
    "n_steps": 10,
    "c1": 1.25,
    "c2": 19652,
    "gamma": 1,

    "minimum_reward": -1,
    "maximum_reward": 1,

    "checkpoint": "./out/MuZeroOut/",
    "load_model": false,
    "load_folder_file": ["./MuZeroOut/", "latest.pth.tar"],
    "numItersForTrainExamplesHistory": 20,

    "temperature_schedule": {
      "method": "linear",
      "by_weight_update": true,
      "schedule_points": [[1000, 1], [2500, 0.5], [5000, 0.25]]
    }
  },

  "net_args": {
    "lr": 0.001,
    "l2": 1e-4,
    "dropout": 0.2,
    "batch_size": 128,
    "cuda": false,
    "num_channels": 256,
    "num_towers": 2,
    "num_dense": 2,
    "size_dense": 256,
    "dense_activation": "relu",
    "support_size": 0,
    "observation_length": 1
  }
}
